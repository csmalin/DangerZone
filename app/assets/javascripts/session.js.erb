navigator.geolocation.getCurrentPosition(geoLocation)

  function geoLocation(position) {
    var lat = position.coords.latitude,
    lon = position.coords.longitude;
    var map = L.mapbox.map('map', 'alex-ray.map-p9i5ggnv').setView([lat, lon], 20);


    L.marker([lat,lon], {
      icon: L.icon({
        iconUrl: "http://i.imgur.com/FOqzufV.png",
        iconSize:     [35, 35], 
        iconAnchor:   [25, 25], 
        popupAnchor:  [0, -25]  
      })
    }).addTo(map);  

    $.getJSON('/crimes', function(data) { 

      var crimes = data;

      for (x in crimes){ 
        
        L.circle([crimes[x].latitude,crimes[x].longitude],10,{color:'red'},{opacity:'5.0'}).addTo(map); 
      }

        function onMapClick(e) {
         popup
         .setLatLng(e.latlng)
         .setContent("You clicked the map at " + e.latlng.toString())
         .openOn(map);
       }
     }); 
   }
